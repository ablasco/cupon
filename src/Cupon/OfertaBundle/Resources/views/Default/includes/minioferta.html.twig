{% set ofertaUrl = path('oferta', { 'ciudad': oferta.ciudad.slug, 'slug': oferta.slug }) %}

<section class="oferta mini">
    <div class="descripcion">
        <h2><a href="{{ ofertaUrl }}">{{ oferta.nombre }}</a></h2>

        {{ oferta.descripcion | mostrar_como_lista }}

        <a class="boton" href="#">Comprar</a>

        <div class="estado">
            <!-- <div class="tiempo"> -->
            <div id="tiempo">
                <strong>Faltan</strong>: {{ oferta.fechaExpiracion | cuenta_atras }}
            </div>
        </div>
    </div>

    <div class="galeria">
        <img alt="FotografÃ­a de la oferta" src="{{ asset('uploads/images/' ~ oferta.foto) }}">
        <p class="precio">
            {{ oferta.precio }} &euro;
            <span>{{ descuento(oferta.precio, oferta.descuento) }}</span>
        </p>
        <p>
            Disfruta de esta oferta en
            <a href="#">{{ oferta.tienda.nombre}}</a>
        </p>
    </div>
</section>
